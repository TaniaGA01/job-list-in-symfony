<div class="text-left">
    <label for="location" class="block text-sm/6 font-medium text-gray-900">Rechercher par commune</label>
    <div class="mt-2 flex">
        <input data-pagination-target="searchInput" type="text" name="location" id="location" class="block w-sm rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6 me-1" placeholder="Commune">
